<div class="container">
  <div class="card">

  <h1><%= @restaurant.name %></h1>
  <p> <strong>Name : </strong> <%= @restaurant.address %></p>
  <p> <strong>Phone Number : </strong> <%= @restaurant.phone_number %></p>
  <p> <strong>Category : </strong> <%= @restaurant.category %></p>
  <%= link_to 'List of Restaurants', restaurants_path, class: 'btn btn-light' %>
  </div>

  <%= link_to new_restaurant_review_path(@restaurant) do %>
  <i class="fas fa-pen-alt"></i>
  <% end %>

  <div class="cards">
    <% @reviews.each do |review| %>
      <div class="card my-2 p-3">
        <p><strong>Avis : </strong><%= review.content %> </p>
        <p><strong>Rating : </strong><%= review.rating %></p>
      </div>
    <% end %>
  </div>
</div>
